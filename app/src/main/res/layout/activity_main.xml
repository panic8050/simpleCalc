<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Match"
    android:orientation="vertical"
    android:paddingStart="@dimen/margin_default_calc"
    android:paddingTop="@dimen/margin_default_calc"
    android:paddingBottom="@dimen/margin_default_calc"
    tools:context=".MainActivity"
    tools:ignore="RtlSymmetry">

    <TextView
        android:id="@+id/enteredNumbersTextView"
        style="@style/TextResult"
        tools:text="@string/defaultValue" />

    <TextView
        android:id="@+id/finalResultTextView"
        style="@style/TextResult"
        tools:text="@string/defaultValue" />

    <LinearLayout
        style="@style/Match"
        android:orientation="vertical">

        <LinearLayout style="@style/LinearHorizontalWeight">

            <Button
                android:id="@+id/bntDivision"
                style="@style/ButtonOperation"
                android:text="@string/divide" />

            <Button
                android:id="@+id/btnMultiply"
                style="@style/ButtonOperation"
                android:text="@string/multiply" />

            <Button
                android:id="@+id/btnPlus"
                style="@style/ButtonOperation"
                android:text="@string/plus" />

            <Button
                android:id="@+id/btnMinus"
                style="@style/ButtonOperation"
                android:text="@string/minus" />

        </LinearLayout>

        <LinearLayout style="@style/LinearHorizontalWeight">

            <Button
                android:id="@+id/btnOne"
                style="@style/ButtonNumber"
                android:text="@string/one" />

            <Button
                android:id="@+id/btnTwo"
                style="@style/ButtonNumber"
                android:text="@string/two" />

            <Button
                android:id="@+id/btnThree"
                style="@style/ButtonNumber"
                android:text="@string/three" />

            <Button
                android:id="@+id/btnCleanTextView"

                style="@style/ButtonNumber"
                android:text="@string/button_clear" />

        </LinearLayout>

        <LinearLayout style="@style/LinearHorizontalWeight">

            <Button
                android:id="@+id/btnFour"
                style="@style/ButtonNumber"
                android:text="@string/four" />

            <Button
                android:id="@+id/btnFive"
                style="@style/ButtonNumber"
                android:text="@string/five" />

            <Button
                android:id="@+id/btnSix"
                style="@style/ButtonNumber"
                android:text="@string/six" />

            <Button
                android:id="@+id/btnBackSpace"
                style="@style/ButtonNumber"
                android:text="@string/c" />

        </LinearLayout>

        <LinearLayout style="@style/LinearHorizontalWeight">

            <Button
                android:id="@+id/btnSeven"
                style="@style/ButtonNumber"
                android:text="@string/seven" />

            <Button
                android:id="@+id/btnEight"
                style="@style/ButtonNumber"
                android:text="@string/eight" />

            <Button
                android:id="@+id/btnNine"
                style="@style/ButtonNumber"
                android:text="@string/nine" />

            <Button
                android:id="@+id/btnZero"
                style="@style/ButtonNumber"
                android:text="@string/zero" />

        </LinearLayout>

        <LinearLayout style="@style/LinearHorizontalWeight">

            <Button
                android:id="@+id/btnDot"
                style="@style/ButtonNumber"
                android:text="@string/dot" />

            <Button
                android:id="@+id/btnEquals"
                style="@style/ButtonNumber"
                android:text="@string/equals" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

